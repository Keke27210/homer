//- Article - Represents the page of an article.

<!DOCTYPE html>
html(lang=`${locale}`)
  head
    include modules/head.pug
  body
    include modules/header.pug

    div(class="jumbotron jumbotron-fluid")
      div(class="container")
        h1(class="mbr-section-title mbr-bold mbr-fonts-style text-center") #{article.title}
        hr
        p(class="lead") !{article.content}
        hr
        p(class="text-right") !{__('dashboard.article.footer', { authorID: articleAuthor.id, authorTag: articleAuthor.tag, published: new Date(article.published).toLocaleString() })}

    include modules/footer.pug

    include modules/javascript.pug