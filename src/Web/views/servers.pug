//- Servers - Represents the page where mutual guilds are shown.

<!DOCTYPE html>
html(lang=`${locale}`)
  head
    include modules/head.pug
  body
    include modules/header.pug

    div(class="jumbotron jumbotron-fluid")
      div(class="container center-block h-100")
        h1(class="mbr-section-title mbr-bold mbr-fonts-style text-center") #{__('dashboard.servers.title')}
        hr
        div(class="d-flex flex-wrap justify-content-center h-100")
          each guild in mutualGuilds
            div(title=`${guild.name}` data-toggle="svr" data-placement="bottom")
              a(href=`/server/${guild.id}`)
                img(class="rounded-circle" height="75" width="75" src=`${guild.iconURL}` alt="")
            div(class="m-3")

    include modules/footer.pug

    include modules/javascript.pug

    script $(() => $('[data-toggle="svr"]').tooltip());