{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "rules": {
        "class-methods-use-this": "off",
        "consistent-return": "off",
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "max-classes-per-file": "off",
        "no-await-in-loop": "off",
        "no-continue": "off",
        "no-param-reassign": "off",
        "no-underscore-dangle": "off"
    }
}